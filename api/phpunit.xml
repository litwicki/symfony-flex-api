<phpunit xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd" backupGlobals="false" colors="true" bootstrap="app/autoload.php" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<php>
    <ini name="error_reporting" value="-1"/>
    <server name="KERNEL_DIR" value="app/"/>
</php>
<testsuites>
    <testsuite name="Tavro Test Suite">
        <directory>tests</directory>
    </testsuite>
</testsuites>
<filter>
    <whitelist>
        <directory>src</directory>
        <exclude>
            <directory>src/*Bundle/Resources</directory>
            <directory>src/*/*Bundle/Resources</directory>
            <directory>src/*/Bundle/*Bundle/Resources</directory>
        </exclude>
    </whitelist>
</filter>
</phpunit>