{% extends 'TavroFrontendBundle:Layouts:app.html.twig' %}

{% block body_classes %}api{% endblock %}

{% block content %}

  <div class="page-header">
    <h1>API::create</h1>
    <p class="lead"><i class="fa fa-fw fa-plus-circle"></i> Create (POST) a new Entity.</p>
  </div>

  <div class="clearfix">

    <div class="col-lg-5">
      <h3>Entity</h3>

      <div class="small list-group">
        {% for key,name in entities %}
        <a class="list-group-item" href="{{ path('example_api_create_entity', {'entity':key}) }}">{{ name }}</a>
        {% endfor %}
      </div>
    </div>

    <div class="col-lg-1"></div>
    <div class="col-lg-6">

      <table class="table table-responsive table-striped">
        <tr>
          <th>Host</th>
          <td><code>{{ app_hostname }}</code></td>
        </tr>
        <tr>
          <th>Route</th>
          <td><code>api_post_entity</code></td>
        </tr>
        <tr>
          <th>Path</th>
          <td><code>/api/{entity}.{format}</code></td>
        </tr>
        <tr>
          <th>Method(s)</th>
          <td><code>POST</code></td>
        </tr>
        <tr>
          <th>Format</th>
          <td><strong>JSON</strong></td>
        </tr>
      </table>

    </div>
  </div>

  <div class="page-header">
    <span class="pull-right">
      <a class="btn btn-sm btn-default" href="javascript:;" id="clear-data"><i class="fa fa-fw fa-eraser"></i> Clear</a>
    </span>
    <h2>API Response</h2>
  </div>

  <pre><code id="api-data" class="json">{ }</code></pre>

{% endblock %}