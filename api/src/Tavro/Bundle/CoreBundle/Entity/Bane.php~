<?php

namespace CamelotMods\Bundle\CoreBundle\Entity;


use Doctrine\ORM\Mapping AS ORM;

use JMS\Serializer\Annotation\Accessor;
use JMS\Serializer\Annotation\ExclusionPolicy;
use JMS\Serializer\Annotation\Expose;
use JMS\Serializer\Annotation\Type;
use JMS\Serializer\Annotation\VirtualProperty;
use Doctrine\ORM\Mapping\Table;

use CamelotMods\Bundle\CoreBundle\Model\Entity;
use CamelotMods\Bundle\CoreBundle\Model\EntityInterface;

/**
 * @ORM\Entity
 * @ORM\HasLifecycleCallbacks
 * @Table(name="camelot_bane")
 *
 * @ExclusionPolicy("all")
 */
class Bane extends Entity implements EntityInterface
{

    /**
     * @ORM\Column(type="string", length=500, nullable=true)
     * @Expose
     */
    protected $title;

    /**
     * @ORM\Column(type="string", length=8000, nullable=true)
     * @Expose
     */
    protected $body;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RealmBane", mappedBy="bane", cascade={"remove"})
     */
    protected $realm_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RaceBane", mappedBy="bane", cascade={"remove"})
     */
    protected $race_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\ClassBane", mappedBy="bane", cascade={"remove"})
     */
    protected $class_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\ArchetypeBane", mappedBy="bane", cascade={"remove"})
     */
    protected $archetype_banes;

    public function __construct()
    {
        $this->realm_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->race_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->class_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->archetype_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->create_date = new \DateTime();
        $this->update_date = new \DateTime();
    }

    /**
     * Set title
     *
     * @param string $title
     * @return Bane
     */
    public function setTitle($title)
    {
        $this->title = $title;

        return $this;
    }

    /**
     * Get title
     *
     * @return string 
     */
    public function getTitle()
    {
        return $this->title;
    }

    /**
     * Set body
     *
     * @param string $body
     * @return Bane
     */
    public function setBody($body)
    {
        $this->body = $body;

        return $this;
    }

    /**
     * Get body
     *
     * @return string 
     */
    public function getBody()
    {
        return $this->body;
    }

    /**
     * Add realm_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RealmBane $realmBanes
     * @return Bane
     */
    public function addRealmBane(\CamelotMods\Bundle\CoreBundle\Entity\RealmBane $realmBanes)
    {
        $this->realm_banes[] = $realmBanes;

        return $this;
    }

    /**
     * Remove realm_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RealmBane $realmBanes
     */
    public function removeRealmBane(\CamelotMods\Bundle\CoreBundle\Entity\RealmBane $realmBanes)
    {
        $this->realm_banes->removeElement($realmBanes);
    }

    /**
     * Get realm_banes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getRealmBanes()
    {
        return $this->realm_banes;
    }

    /**
     * Add race_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes
     * @return Bane
     */
    public function addRaceBane(\CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes)
    {
        $this->race_banes[] = $raceBanes;

        return $this;
    }

    /**
     * Remove race_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes
     */
    public function removeRaceBane(\CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes)
    {
        $this->race_banes->removeElement($raceBanes);
    }

    /**
     * Get race_banes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getRaceBanes()
    {
        return $this->race_banes;
    }

    /**
     * Add class_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\ClassBane $classBanes
     * @return Bane
     */
    public function addClassBane(\CamelotMods\Bundle\CoreBundle\Entity\ClassBane $classBanes)
    {
        $this->class_banes[] = $classBanes;

        return $this;
    }

    /**
     * Remove class_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\ClassBane $classBanes
     */
    public function removeClassBane(\CamelotMods\Bundle\CoreBundle\Entity\ClassBane $classBanes)
    {
        $this->class_banes->removeElement($classBanes);
    }

    /**
     * Get class_banes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getClassBanes()
    {
        return $this->class_banes;
    }

}
