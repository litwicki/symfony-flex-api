<?php

namespace CamelotMods\Bundle\CoreBundle\Entity;

use Doctrine\ORM\Mapping AS ORM;

use JMS\Serializer\Annotation\Accessor;
use JMS\Serializer\Annotation\ExclusionPolicy;
use JMS\Serializer\Annotation\Expose;
use JMS\Serializer\Annotation\Type;
use JMS\Serializer\Annotation\VirtualProperty;
use Doctrine\ORM\Mapping\Table;

use CamelotMods\Bundle\CoreBundle\Model\Entity;
use CamelotMods\Bundle\CoreBundle\Model\EntityInterface;

/**
 * @ORM\Entity
 * @ORM\HasLifecycleCallbacks
 * @Table(name="camelot_race")
 *
 * @ExclusionPolicy("all")
 */
class Race extends Entity implements EntityInterface
{

    /**
     * @ORM\Column(type="string", length=500, nullable=true)
     * @Expose
     */
    protected $title;

    /**
     * @ORM\Column(type="string", length=8000, nullable=true)
     * @Expose
     */
    protected $body;

    /**
     * @ORM\ManyToOne(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\Realm", inversedBy="races")
     * @ORM\JoinColumn(name="realm_id", referencedColumnName="id", nullable=false)
     */
    protected $realm;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\CamelotClass", mappedBy="race", cascade={"remove"})
     */
    protected $classes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RaceBane", mappedBy="race", cascade={"remove"})
     */
    protected $race_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RaceBoon", mappedBy="race", cascade={"remove"})
     */
    protected $race_boons;

    /**
     * Constructor
     */
    public function __construct()
    {
        $this->classes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->race_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->race_boons = new \Doctrine\Common\Collections\ArrayCollection();
        $this->create_date = new \DateTime();
        $this->update_date = new \DateTime();
    }

    /**
     * Set title
     *
     * @param string $title
     * @return Race
     */
    public function setTitle($title)
    {
        $this->title = $title;

        return $this;
    }

    /**
     * Get title
     *
     * @return string 
     */
    public function getTitle()
    {
        return $this->title;
    }

    /**
     * Set body
     *
     * @param string $body
     * @return Race
     */
    public function setBody($body)
    {
        $this->body = $body;

        return $this;
    }

    /**
     * Get body
     *
     * @return string 
     */
    public function getBody()
    {
        return $this->body;
    }

    /**
     * Add classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     * @return Race
     */
    public function addClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes[] = $classes;

        return $this;
    }

    /**
     * Remove classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     */
    public function removeClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes->removeElement($classes);
    }

    /**
     * Get classes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getClasses()
    {
        return $this->classes;
    }

    /**
     * Add race_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes
     * @return Race
     */
    public function addRaceBane(\CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes)
    {
        $this->race_banes[] = $raceBanes;

        return $this;
    }

    /**
     * Remove race_banes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes
     */
    public function removeRaceBane(\CamelotMods\Bundle\CoreBundle\Entity\RaceBane $raceBanes)
    {
        $this->race_banes->removeElement($raceBanes);
    }

    /**
     * Get race_banes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getRaceBanes()
    {
        return $this->race_banes;
    }

    /**
     * Add race_boons
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBoon $raceBoons
     * @return Race
     */
    public function addRaceBoon(\CamelotMods\Bundle\CoreBundle\Entity\RaceBoon $raceBoons)
    {
        $this->race_boons[] = $raceBoons;

        return $this;
    }

    /**
     * Remove race_boons
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\RaceBoon $raceBoons
     */
    public function removeRaceBoon(\CamelotMods\Bundle\CoreBundle\Entity\RaceBoon $raceBoons)
    {
        $this->race_boons->removeElement($raceBoons);
    }

    /**
     * Get race_boons
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getRaceBoons()
    {
        return $this->race_boons;
    }

}
