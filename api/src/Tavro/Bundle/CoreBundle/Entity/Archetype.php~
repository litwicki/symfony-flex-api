<?php

namespace CamelotMods\Bundle\CoreBundle\Entity;

use Doctrine\ORM\Mapping AS ORM;

use JMS\Serializer\Annotation\Accessor;
use JMS\Serializer\Annotation\ExclusionPolicy;
use JMS\Serializer\Annotation\Expose;
use JMS\Serializer\Annotation\Type;
use JMS\Serializer\Annotation\VirtualProperty;
use Doctrine\ORM\Mapping\Table;

use CamelotMods\Bundle\CoreBundle\Model\Entity;
use CamelotMods\Bundle\CoreBundle\Model\EntityInterface;

/**
 * @ORM\Entity
 * @ORM\HasLifecycleCallbacks
 * @Table(name="camelot_archetype")
 * @ExclusionPolicy("all")
 */
class Archetype extends Entity implements EntityInterface
{
    /**
     * @ORM\Column(type="string", length=32, nullable=false)
     * @Expose
     */
    protected $title;

    /**
     * @ORM\Column(type="string", length=32, nullable=false)
     * @Expose
     */
    protected $slug;

    /**
     * @ORM\Column(type="string", length=8000, nullable=true)
     * @Expose
     */
    protected $body;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\CamelotClass", mappedBy="archetype")
     * @ORM\OrderBy({"id" = "DESC"})
     */
    protected $classes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\ArchetypeBane", mappedBy="archetype")
     * @ORM\OrderBy({"id" = "DESC"})
     */
    protected $archetype_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\ArchetypeBoon", mappedBy="archetype")
     * @ORM\OrderBy({"id" = "DESC"})
     */
    protected $archetype_boons;

    /**
     * Construct a new Archetype.
     */
    public function __construct()
    {
        $this->archetype_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->archetype_boons = new \Doctrine\Common\Collections\ArrayCollection();
    }

    /**
     * Set title
     *
     * @param string $title
     * @return Archetype
     */
    public function setTitle($title)
    {
        $this->title = $title;

        return $this;
    }

    /**
     * Get title
     *
     * @return string
     */
    public function getTitle()
    {
        return $this->title;
    }

    /**
     * Set slug
     *
     * @param string $slug
     * @return Archetype
     */
    public function setSlug($slug)
    {
        $this->slug = $slug;

        return $this;
    }

    /**
     * Get slug
     *
     * @return string
     */
    public function getSlug()
    {
        return $this->slug;
    }

    /**
     * Set body
     *
     * @param string $body
     * @return Archetype
     */
    public function setBody($body)
    {
        $this->body = $body;

        return $this;
    }

    /**
     * Get body
     *
     * @return string
     */
    public function getBody()
    {
        return $this->body;
    }

    /**
     * Add classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     * @return Archetype
     */
    public function addClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes[] = $classes;

        return $this;
    }

    /**
     * Remove classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     */
    public function removeClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes->removeElement($classes);
    }

    /**
     * Get classes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getClasses()
    {
        return $this->classes;
    }


}
