<?php

namespace CamelotMods\Bundle\CoreBundle\Entity;

use Doctrine\ORM\Mapping AS ORM;

use JMS\Serializer\Annotation\Accessor;
use JMS\Serializer\Annotation\ExclusionPolicy;
use JMS\Serializer\Annotation\Expose;
use JMS\Serializer\Annotation\Type;
use JMS\Serializer\Annotation\VirtualProperty;
use Doctrine\ORM\Mapping\Table;

use CamelotMods\Bundle\CoreBundle\Model\Entity;
use CamelotMods\Bundle\CoreBundle\Model\EntityInterface;

/**
 * @ORM\Entity
 * @ORM\HasLifecycleCallbacks
 * @Table(name="camelot_realm")
 *
 * @ExclusionPolicy("all")
 */
class Realm extends Entity implements EntityInterface
{

    /**
     * @ORM\Column(type="string", length=500, nullable=true)
     * @Expose
     */
    protected $title;

    /**
     * @ORM\Column(type="string", length=32, unique=true, nullable=false)
     * @Expose
     */
    protected $slug;

    /**
     * @ORM\Column(type="string", length=8000, nullable=true)
     * @Expose
     */
    protected $body;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\CamelotClass", mappedBy="realm", cascade={"remove"})
     */
    protected $classes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RealmBane", mappedBy="bane", cascade={"remove"})
     */
    protected $realm_banes;

    /**
     * @ORM\OneToMany(targetEntity="CamelotMods\Bundle\CoreBundle\Entity\RealmBoon", mappedBy="boon", cascade={"remove"})
     */
    protected $realm_boons;

    /**
     * Constructor
     */
    public function __construct()
    {
        $this->classes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->realm_banes = new \Doctrine\Common\Collections\ArrayCollection();
        $this->realm_boons = new \Doctrine\Common\Collections\ArrayCollection();
        $this->status = 1;
        $this->create_date = new \DateTime();
    }

    /**
     * Set title
     *
     * @param string $title
     * @return Realm
     */
    public function setTitle($title)
    {
        $this->title = $title;

        return $this;
    }

    /**
     * Get title
     *
     * @return string 
     */
    public function getTitle()
    {
        return $this->title;
    }

    /**
     * Set slug
     *
     * @param string $slug
     * @return Realm
     */
    public function setSlug($slug)
    {
        $this->slug = $slug;

        return $this;
    }

    /**
     * Get slug
     *
     * @return string
     */
    public function getSlug()
    {
        return $this->slug;
    }

    /**
     * Set body
     *
     * @param string $body
     * @return Realm
     */
    public function setBody($body)
    {
        $this->body = $body;

        return $this;
    }

    /**
     * Get body
     *
     * @return string 
     */
    public function getBody()
    {
        return $this->body;
    }

    /**
     * Add classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     * @return Realm
     */
    public function addClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes[] = $classes;

        return $this;
    }

    /**
     * Remove classes
     *
     * @param \CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes
     */
    public function removeClass(\CamelotMods\Bundle\CoreBundle\Entity\CamelotClass $classes)
    {
        $this->classes->removeElement($classes);
    }

    /**
     * Get classes
     *
     * @return \Doctrine\Common\Collections\Collection 
     */
    public function getClasses()
    {
        return $this->classes;
    }
}
