{% extends 'TavroAppBundle:Layouts:admin.html.twig' %}

{% block content -%}
  <div class="page-header">
    <a class="pull-right btn btn-sm btn-primary" href="{{ path('variable_new') }}"><i class="fa fa-fw fa-cog"></i> New Variable</a>
    <h1>Variable list</h1>
  </div>

  <table class="table table-striped table-hover table-responsive">
      <thead>
          <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Slug</th>
              <th>Value</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
          <tr>
              <td><a href="{{ path('variable_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.name }}</td>
              <td>{{ entity.slug }}</td>
              <td>{{ entity.value }}</td>
              <td>
              <ul>
                  <li>
                      <a href="{{ path('variable_show', { 'id': entity.id }) }}">show</a>
                  </li>
                  <li>
                      <a href="{{ path('variable_edit', { 'id': entity.id }) }}">edit</a>
                  </li>
              </ul>
              </td>
          </tr>
      {% endfor %}
      </tbody>
  </table>

{% endblock %}