{# src/tavro/UserBundle/Resources/views/Security/login.html.twig #}

{% extends '::base.html.twig' %}

{% block body_classes %}forgot{% endblock %}
{% block title %}Reset Password{% endblock %}
{% block body %}

  <div class="page-header">
    <h1><i class="fa fa-fw fa-user-secret"></i> Reset your password</h1>
  </div>

  <div id="password-reset clearfix">

    <div class="col-lg-8">
      {{ form_start(form, {'attr': {'class': 'password-reset-form'}}) }}
      {{ form_errors(form) }}

      <div class="col-lg-6">
        <div class="input-group form-group">
          <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
          {{ form_widget(form.password) }}
        </div>
        <div class="input-group form-group">
          <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
          {{ form_widget(form.password_confirm) }}
        </div>
        <div class="form-group">
          {{ form_widget(form.submit) }}
        </div>
      </div>

      <div class="col-lg-6">
        {% include 'TavroAppBundle:Security:password-requirements.html.twig' %}
      </div>

      {{ form_end(form) }}
    </div>

  </div>

{% endblock %}