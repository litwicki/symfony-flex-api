{% extends '::base.html.twig' %}

{% block body_classes %}sign-up{% endblock %}
{% block title %}Signup{% endblock %}

{% block body %}

  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">

      <h1><i class="fa fa-fw fa-user-plus"></i> Sign Up!</h1>
      <div class="panel panel-default">

        {#<div class="panel-heading">#}
          {#<h3 class="panel-title"><i class="fa fa-fw fa-user-plus"></i> Sign Up!</h3>#}
        {#</div>#}

        <div class="panel-body">

          {{ form_start(form, {'action': path('register'), 'method': 'POST'}) }}

          <input type="hidden" name="_csrf_token" value="{{ csrf_token('signup') }}" />

            <div class="form-group">
              <label for="username">Username</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-fw fa-user"></i></div>
                {{ form_widget(form.username) }}
              </div>
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-fw fa-envelope-square"></i></div>
                {{ form_widget(form.email) }}
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                  <label for="password">Password</label>
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                    {{ form_widget(form.password) }}
                  </div>
                </div>

                <div class="form-group">
                  <label for="password">Password Confirm</label>
                  <div class="input-group">
                    <div class="input-group-addon"><i class="fa fa-fw fa-lock"></i></div>
                    {{ form_widget(form.password_confirm) }}
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                {% include 'TavroAppBundle:Security:password-requirements.html.twig' %}
              </div>
            </div>

            <div class="form-group">
              {{ form_label(form.captcha) }}
              {{ form_widget(form.captcha) }}
            </div>

            <div class="form-group">
              {{ form_widget(form.submit) }}
            </div>

          {{ form_end(form) }}

        </div>

      </div>
    </div>
  </div>

{% endblock %}