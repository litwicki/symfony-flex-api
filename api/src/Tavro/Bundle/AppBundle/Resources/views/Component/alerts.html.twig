{% for type in ['success', 'info', 'warning', 'error', 'danger', 'notice'] %}
  {% for flash in app.session.flashbag.get(type) %}
    <div class="alert alert-{{ type }}" role="alert">
      <button type="button" class="close" data-dismiss="alert"><i class="fa fa-fw fa-close"></i></button>
      <i class="fa fa-fw fa-exclamation-circle"></i> {{ flash|trans|raw }}
    </div>
  {% endfor %}
{% endfor %}

<div class="alert alert-dismissible alert-{[alert.type]} animate" ng-repeat="alert in alerts">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true"><i class="fa fa-fw fa-close"></i></span></button>
  {[alert.message]}
</div>