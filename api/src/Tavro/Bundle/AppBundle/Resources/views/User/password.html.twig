<form ng-submit="resetPassword()">

  <div class="row">

    <div class="col-sm-6">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-fw fa-key text-primary"></i></div>
          <input ng-model="old_password" type="password" class="form-control" placeholder="Current password.." />
        </div>
      </div>
      <hr />
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-fw fa-user-secret"></i></div>
          <input ng-model="password" type="password" class="form-control" placeholder="New password" />
        </div>
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon"><i class="fa fa-fw fa-user-secret"></i></div>
          <input ng-model="confirm_password" type="password" class="form-control" placeholder="Confirm new password.." />
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      {% include 'TavroAppBundle:Security:password-requirements.html.twig' %}
    </div>

  </div>

  <hr />

  <button type="button" class="btn btn-success">
    <i class="fa fa-fw fa-refresh"></i> Reset Password
  </button>

</form>