<table class="table table-striped table-hover" ng-if="profile_user.mods.length > 0">
  <thead>
    <tr>
      <th class="text-center" style="width: 40px;"></th>
      <th>Name</th>
      <th class="text-center" style="width: 40px;"><i class="fa fa-fw fa-download"></i></th>
      <th class="text-center" style="width: 40px;"><i class="fa fa-fw fa-search"></i></th>
    </tr>
  </thead>
  <tr ng-repeat="mod in profile_user.mods">
    <td class="text-center">
      <i class="fa fa-fw"
        ng-class="{'fa-ban text-danger':mod.status == 0, 'fa-check text-success':mod.status == 1, 'fa-spinner fa-spin':mod.status == 2, '':mod.status > 2}">
      </i>
    </td>
    <td>
      <a href="/mods/{[mod.slug]}" ng-if="mod.status == 1">{[mod.title]}</a><strong ng-if="mod.status != 1">{[mod.title]}</strong>
    </td>
    <td class="text-center">{[mod.downloads]}</td>
    <td class="text-center">{[mod.views]}</td>
  </tr>
</table>