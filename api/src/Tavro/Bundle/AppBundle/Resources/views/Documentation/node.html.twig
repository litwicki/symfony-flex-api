{% extends 'TavroAppBundle:Layouts:documentation.html.twig' %}
{% set node_page = true %}
{% block body_classes %}doc-page{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Node API</h1>
        <p class="lead"><i class="fa fa-fw fa-cube"></i> Interact with <code>api.tavro.io</code> and manage your Nodes.</p>
        <ul class="list-inline">
            <li class="label label-default">Comments</li>
            <li class="label label-default">Tags</li>
        </ul>
    </div>
    <div class="page-header">
        <h3><i class="fa fa-fw fa-database"></i> Node Model</h3>
        <p>The Node object model.</p>
    </div>

    <div class="panel panel-default">
        <table class="table table-hover table-striped table-api">
            <thead>
            <tr>
                <th>Field</th>
                <th>Type</th>
                <th>Methods</th>
                <th>Notes</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>id</td>
                <td class="integer">integer</td>
                <td class="code">GET, DELETE</td>
                <td>Unique identifier.</td>
            </tr>
            <tr>
                <td>title</td>
                <td class="string">string</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>body</td>
                <td class="string">text</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>update_date</td>
                <td class="date">date</td>
                <td class="code get">GET, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>create_date</td>
                <td class="date">date</td>
                <td class="code get">GET, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>status</td>
                <td class="integer">integer</td>
                <td class="code">GET, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>organization <code>organization_id</code></td>
                <td class="integer">integer</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td>The Organization.</td>
            </tr>
            <tr>
                <td>user <code>user_id</code></td>
                <td class="integer">integer</td>
                <td class="code">GET, POST, PUT, PATCH</td>
                <td>The User who created the Node.</td>
            </tr>
            <tr>
                <td>comments</td>
                <td class="array">array</td>
                <td class="code get">GET</td>
                <td>Comments on this Node.</td>
            </tr>
            <tr>
                <td>tags</td>
                <td class="array">array</td>
                <td class="code get">GET</td>
                <td>Tags on this Node.</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="page-header">
        <h3><i class="fa fa-fw fa-location-arrow"></i> Node Api Routes</h3>
    </div>

    <ul>
        <li><code>{node}</code> must be the integer ID of a Node.</li>
        <li><code>{format}</code> must be <code>XML</code> or <code>JSON</code> (if not provided the default is <code>JSON</code>).</li>
    </ul>

    <hr/>

    <div class="panel panel-default">
        <table class="table table-striped table-hover table-api">
            <tr>
                <th>Path</th>
                <th>Method(s)</th>
                <th>Description</th>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes.{format}</td>
                <td class="code get">GET</td>
                <td>Get all Nodes.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}.{format}</td>
                <td class="code get">GET</td>
                <td>Get a Node by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}.{format}</td>
                <td class="code update">PUT, PATCH</td>
                <td>Update a Node by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}.{format}</td>
                <td class="code delete">DELETE</td>
                <td>Delete a Node by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes.{format}</td>
                <td class="code post">POST</td>
                <td>Create a Node.</td>
            </tr>
            <tr>
                <th colspan="3">Additional Routes</th>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}/comments.{format}</td>
                <td class="code get">GET</td>
                <td>Get all comments for this Node.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}/comments.{format}</td>
                <td class="code post">POST</td>
                <td>Create a new comment for this Node.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}/tags.{format}</td>
                <td class="code get">GET</td>
                <td>Get all tags for this Node.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/nodes/{node}/tags.{format}</td>
                <td class="code post">POST</td>
                <td>Add a new Tag to this Node.</td>
            </tr>
        </table>
    </div>

    {% include 'TavroAppBundle:Documentation/partials:comment.html.twig' %}

    {% include 'TavroAppBundle:Documentation/partials:tag.html.twig' %}

{% endblock %}