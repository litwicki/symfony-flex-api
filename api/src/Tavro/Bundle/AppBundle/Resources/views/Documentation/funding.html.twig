{% extends 'TavroAppBundle:Layouts:documentation.html.twig' %}
{% set funding_page = true %}
{% block body_classes %}doc-page{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Funding API</h1>
        <p class="lead"><i class="fa fa-fw fa-bank"></i> Interact with <code>api.tavro.io</code> and manage your funding rounds.</p>
        <ul class="list-inline">
            <li class="label label-default">Comments</li>
        </ul>
    </div>

    <div class="page-header">
        <h3><i class="fa fa-fw fa-database"></i> FundingRound Model</h3>
    </div>

    <div class="panel panel-default">
        <table class="table table-hover table-striped table-api">
            <thead>
            <tr>
                <th>Field</th>
                <th>Type</th>
                <th>Methods</th>
                <th>Notes</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>id</td>
                <td class="integer">integer</td>
                <td>GET, DELETE</td>
                <td>Unique identifier.</td>
            </tr>
            <tr>
                <td>title</td>
                <td class="string">string</td>
                <td>GET, PUT, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>body</td>
                <td class="text">text</td>
                <td>GET, PUT, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>update_date</td>
                <td class="date">date</td>
                <td>GET</td>
                <td></td>
            </tr>
            <tr>
                <td>create_date</td>
                <td class="date">date</td>
                <td>GET</td>
                <td></td>
            </tr>
            <tr>
                <td>status</td>
                <td class="integer">integer</td>
                <td>GET, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>organization <code>organization_id</code></td>
                <td class="integer">integer</td>
                <td>GET, PATCH, PUT</td>
                <td>The Organization.</td>
            </tr>
            <tr>
                <td>shareholders</td>
                <td class="array">array</td>
                <td>GET, POST</td>
                <td>Shareholders on this Funding round.</td>
            </tr>
            <tr>
                <td>comments</td>
                <td class="array">array</td>
                <td>GET, POST</td>
                <td>Comments on this Funding round.</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="page-header">
        <h3><i class="fa fa-fw fa-location-arrow"></i> FundingRound Api Routes</h3>
    </div>

    <ul>
        <li><code>{funding}</code> must be the integer ID of a Funding round..</li>
        <li><code>{format}</code> must be <code>XML</code> or <code>JSON</code> (if not provided the default is <code>JSON</code>).</li>
    </ul>

    <hr/>

    <div class="panel panel-default">
        <table class="table table-striped table-hover table-api">
            <tr>
                <th>Path</th>
                <th>Method(s)</th>
                <th>Description</th>
            </tr>
            <tr>
                <td class="code">/api/v1/funding_rounds.{format}</td>
                <td class="code get">GET</td>
                <td>Get all Funding rounds.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/funding_rounds/{funding}.{format}</td>
                <td class="code get">GET</td>
                <td>Get a Funding round by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/funding_rounds/{funding}.{format}</td>
                <td class="code update">PUT, PATCH</td>
                <td>Update a Funding round by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/funding_rounds/{funding}.{format}</td>
                <td class="code delete">DELETE</td>
                <td>Delete a Funding round by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/funding_rounds.{format}</td>
                <td class="code post">POST</td>
                <td>Create a Funding round.</td>
            </tr>
        </table>
    </div>

    {% include 'TavroAppBundle:Documentation/partials:shareholder.html.twig' %}

    {% include 'TavroAppBundle:Documentation/partials:comment.html.twig' %}

{% endblock %}