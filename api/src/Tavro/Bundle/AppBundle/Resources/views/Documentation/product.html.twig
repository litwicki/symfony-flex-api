{% extends 'TavroAppBundle:Layouts:documentation.html.twig' %}
{% set product_page = true %}
{% block body_classes %}doc-page{% endblock %}

{% block content %}

    <div class="page-header">
        <h1>Product API</h1>
        <p class="lead"><i class="fa fa-fw fa-car"></i> Interact with <code>api.tavro.io</code> and manage your Products.</p>
        <ul class="list-inline">
            <li class="label label-default">Categories</li>
            <li class="label label-default">Images</li>
        </ul>
    </div>

    <div class="page-header">
        <h3><i class="fa fa-fw fa-database"></i> Product Model</h3>
        <p>The Product object model.</p>
    </div>

    <div class="panel panel-default">
        <table class="table table-hover table-striped table-api">
            <thead>
            <tr>
                <th>Field</th>
                <th>Type</th>
                <th>Methods</th>
                <th>Notes</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>id</td>
                <td class="integer">integer</td>
                <td class="code">GET, DELETE</td>
                <td>Unique identifier.</td>
            </tr>
            <tr>
                <td>title</td>
                <td class="string">string</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>body</td>
                <td class="string">text</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>update_date</td>
                <td class="date">date</td>
                <td class="code get">GET, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>create_date</td>
                <td class="date">date</td>
                <td class="code get">GET, PATCH</td>
                <td></td>
            </tr>
            <tr>
                <td>status</td>
                <td class="integer">integer</td>
                <td class="code">GET, PATCH, PUT</td>
                <td></td>
            </tr>
            <tr>
                <td>organization <code>organization_id</code></td>
                <td class="integer">integer</td>
                <td class="code">GET, POST, PATCH, PUT</td>
                <td>The Organization.</td>
            </tr>
            <tr>
                <td>category <code>category_id</code></td>
                <td class="integer">integer</td>
                <td class="code">GET, POST, PUT, PATCH</td>
                <td>The <a href="#product-category">ProductCategory</a></td>
            </tr>
            <tr>
                <td>images</td>
                <td class="array">array</td>
                <td class="code">GET</td>
                <td>The Organization.</td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="page-header">
        <h3><i class="fa fa-fw fa-location-arrow"></i> Product Api Routes</h3>
    </div>

    <ul>
        <li><code>{product}</code> must be the integer ID of an Product.</li>
        <li><code>{format}</code> must be <code>XML</code> or <code>JSON</code> (if not provided the default is <code>JSON</code>).</li>
    </ul>

    <hr/>

    <div class="panel panel-default">
        <table class="table table-striped table-hover table-api">
            <tr>
                <th>Path</th>
                <th>Method(s)</th>
                <th>Description</th>
            </tr>
            <tr>
                <td class="code">/api/v1/products.{format}</td>
                <td class="code get">GET</td>
                <td>Get all Products.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/products/{product}.{format}</td>
                <td class="code get">GET</td>
                <td>Get an Product by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/products/{product}.{format}</td>
                <td class="code update">PUT, PATCH</td>
                <td>Update an Product by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/products/{product}.{format}</td>
                <td class="code delete">DELETE</td>
                <td>Delete an Product by Id.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/products.{format}</td>
                <td class="code post">POST</td>
                <td>Create an Product.</td>
            </tr>
            <tr>
                <th colspan="3">Additional Routes</th>
            </tr>
            <tr>
                <td class="code">/api/v1/products/{product}/images.{format}</td>
                <td class="code get">GET</td>
                <td>Get all Images for this Product.</td>
            </tr>
            <tr>
                <td class="code">/api/v1/products/{product}/images.{format}</td>
                <td class="code post">POST</td>
                <td>Add a new Image to this Product.</td>
            </tr>
        </table>
    </div>

