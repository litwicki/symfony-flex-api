<p class="lead"><i class="fa fa-fw fa-code-fork"></i> Changelog</p>

<div ng-if="!commits.length" class="alert alert-warning">
  <p><i class="fa fa-fw fa-warning"></i> {[mod.title]} has no history of changes.</p>
</div>

<div class="input-group">
  <span class="input-group-addon" id="commit-text"><i class="fa fa-fw fa-search"></i></span>
  <input id="search-text-field" type="text" class="form-control" placeholder="Filter results by text..." aria-describedby="commit-text" ng-model="commitText">
</div>

<hr />

<table class="table table-striped table-hover small">
  <thead>
    <tr>
      <th style="width: 30px;">Commit</th>
      <th style="width: 150px;">Date</th>
      <th>Detail</th>
    </tr>
  </thead>
  <tbody>
    <tr id="commitTextResults" dir-paginate="commit in commits | filter:commitText | itemsPerPage: 20" pagination-id="modcommits">
      <td><a href="{[commit.url]}" title="{[commit.sha]}" class="btn btn-xs btn-default"><i class="fa fa-fw fa-external-link"></i></a></td>
      <td>{[commit.commit.committer.date|date:'short']}</td>
      <td>{[commit.commit.message]}</td>
    </tr>
  </tbody>
</table>

<div class="text-center">
  <dir-pagination-controls boundary-links="true" max-size="10" pagination-id="modcommits"></dir-pagination-controls>
</div>