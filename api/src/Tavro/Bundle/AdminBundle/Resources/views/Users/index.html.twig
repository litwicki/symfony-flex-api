{% extends 'TavroAdminBundle:Default:base.html.twig' %}

{% set page_title = 'Accounts' %}

{% block title_block %}

    <div class="page-header" style="margin-top: 80px;">
        <h1>Users</h1>
        <p class="lead"><i class="fa fa-fw fa-users"></i> This page is an overview of <strong>all</strong> Tavro Users.</p>
    </div>

{% endblock %}

{% block body %}

<table class="table table-responsive table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Join Date</th>
            <th>Name</th>
            <th>Username</th>
            <th class="text-center">Accounts</th>
            <th class="text-center">Accounts (Owned)</th>
            <th>{#Manage#}</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.createDate|date("Y-m-d h:i:s A") }}</td>
                <td>{% if user.person is defined and user.person is not null%}{{ user.person.firstName }}{% endif %}</td>
                <td>{{ user.username }}</td>
                <td class="text-center">{{ user.accountUsers|length }}</td>
                <td class="text-center">{{ user.accounts|length }}</td>
                <th class="text-right"><a class="btn btn-xs btn-primary" href="{{ url('tavro_admin_user_view', {'user': user.id}) }}"><i class="fa fa-fw fa-pencil-square-o"></i> Manage</a></th>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% include 'TavroAdminBundle:Default:pagination.html.twig' %}

{% endblock %}