{% set currentPath = '' %}
{% set route = app.request.attributes.get('_route') %}
{% if app.request.attributes.get('_route') != '' %}
  {% set currentPath = path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params')) %}
{% endif %}

{% if node_type is defined %}
  {% if node_type == 'guide' %}
    {% set title_class = 'ra-crossed-swords' %}
  {% elseif node_type == 'article' %}
    {% set title_class = 'ra-book' %}
  {% elseif node_type == 'guide' %}
  {% else %}
    {% set title_class = 'ra-gem' %}
  {% endif %}
{% endif %}

<!doctype html>
